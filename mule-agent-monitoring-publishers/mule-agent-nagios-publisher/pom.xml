<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>mule-agent-monitoring-publishers</artifactId>
    <groupId>com.mulesoft.agent</groupId>
      <version>1.7.0-mule-4.x-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>mule-agent-nagios-publisher</artifactId>
  <packaging>jar</packaging>

  <name>Mule Agent :: Modules :: Nagios Publisher</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
      <!-- Mule Agent Dependencies -->
      <dependency>
          <groupId>com.mulesoft.agent</groupId>
          <artifactId>mule-agent-api</artifactId>
      </dependency>

      <!-- Common Dependencies -->
      <dependency>
          <groupId>javax.validation</groupId>
          <artifactId>validation-api</artifactId>
      </dependency>

      <!-- JSendNSCA Dependencies -->
      <dependency>
          <groupId>com.googlecode.jsendnsca</groupId>
          <artifactId>jsendnsca</artifactId>
          <version>2.1</version>
      </dependency>

      <!-- Logging Dependencies -->
      <dependency>
          <groupId>org.apache.logging.log4j</groupId>
          <artifactId>log4j-api</artifactId>
      </dependency>
      <dependency>
          <groupId>org.apache.logging.log4j</groupId>
          <artifactId>log4j-core</artifactId>
      </dependency>
  </dependencies>

  <build>
      <plugins>
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-assembly-plugin</artifactId>
              <configuration>
                  <descriptors>
                      <descriptor>assembly.xml</descriptor>
                  </descriptors>
                  <appendAssemblyId>false</appendAssemblyId>
              </configuration>
              <executions>
                  <execution>
                      <phase>package</phase>
                      <goals>
                          <goal>attached</goal>
                      </goals>
                  </execution>
              </executions>
          </plugin>
      </plugins>
  </build>
</project>
